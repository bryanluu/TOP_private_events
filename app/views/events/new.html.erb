<div class="section">
  <h2 class="title">New Event</h2>
  <%= simple_form_for @event do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="column">
        <%= f.label :title, "Title: " %>
        <%= f.text_field :title,
                required: true,
                autofocus: true %>
      </div>
      <div class="column">
        <%= f.label :location, "Location: " %>
        <%= f.text_field :location,
                required: false,
                autofocus: true %>
      </div>
      <div class="column">
        <%= f.label :date, "Date: " %>
        <%= f.date_select :date,
                required: true,
                autofocus: true %>
      </div>
      <div class="column">
        <%= f.label :desc, "Description: " %><br>
        <%= f.text_area :desc,
                    required: false,
                    autofocus: true,
                    input_html: { class: "textarea" } %>
      </div>
    </div>
    <br>
    <div class="form-actions column">
      <%= f.button :submit, "Create", class: "button is-small is-info" %>
      <%= link_to user_path(current_user) do %>
        <button class="button is-small">Cancel</button>
      <% end %>
    </div>
  <% end %>
</div>
