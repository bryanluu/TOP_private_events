<div class="section">
  <h2 class="title">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs field control">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input" },
                label_html: { class: "label" },
                wrapper: false %>
      <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "input" },
                label_html: { class: "label" },
                wrapper: false %>
      <%= f.input :remember_me, as: :boolean, wrapper: false if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
